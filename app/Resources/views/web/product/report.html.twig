{% extends "base.html.twig" %}

{% block title %}Erros de publicação {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header ex-small">{{ title }}</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                        <tr>
                            <th>#</th>
                            <th>sku</th>
                            <th>parceiro</th>
                            <th>mensagem</th>
                            <th>data</th>
                        </tr>
                </thead>
                <tbody>
                {% for data in report %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ data.sku }}</td>
                        <td>
                            {% if data.market != null %}
                                {{ data.market.name }}
                            {% endif %}
                        </td>
                        <td>{{ data.message }}</td>
                        <td>{{ data.createdAt|date("d/m/Y - H:i") }}</td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
